    </div>
    <!-- Fixed chat-box -->
    <div id="my-chat-box">
      <div id="chat-circle" class="btn btn-raised">
        <div id="chat-overlay"></div>
        <i class="material-icons" id="open-chat-btn">speaker_phone</i>
      </div>

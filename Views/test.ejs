      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-material-design/4.0.2/bootstrap-material-design.css"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />

    <script>
      roomId = '<%=roomId%>';
    </script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script>
      const roomId = '<%= roomId%>';
    </script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/script/test.js"></script>
    <title>room</title>
  </head>
  <body>
    <!--Content of the page-->
    <div id="room-content">
      <div class="nav">
        <div class="">
          <span class="nav-logo">ROOMS</span>
          <i class="material-icons mic noselect" id="mic_off"> mic_off </i>
          <i class="material-icons cam noselect" id="videocam_off"> videocam_off </i>
        </div>
        <i class="material-icons exit noselect" id="exit_to_app"> exit_to_app </i>
      </div>
      <div id="video-grid"></div>
    </div>
    <!--Fixed pop-up-->
    <div class="popup">
      <div class="popup-nav">
        <span class="decorate-text-1">Enter ROOM</span>
      </div>
      <div class="popup-content">
        <table>
          <tr>
            <td>ID</td>
            <td>5f8107c1-89cb-46f0-b4d5-71edf5d4dbee</td>
          </tr>
          <tr>
            <td>Admin</td>
            <td>Rhythm Shandilya</td>
          </tr>
          <tr>
            <td>About</td>
            <td>ReactJs session for beginners</td>
          </tr>
        </table>
        <div style="display: flex; align-items: baseline">
          <div class="form__group field">
            <input
              type="input"
              class="form__field"
              placeholder="Name"
              name="name"
              id="enter-name"
              autocomplete="off"
              autofocus="true"
              required
            />
            <label for="name" class="form__label">NAME</label>
          </div>
          <i class="material-icons" id="same-name"> send </i>
        </div>
      </div>
    </div>
    <!-- Fixed chat-box -->
    <div id="my-chat-box">
      <div id="chat-circle" class="btn btn-raised">
        <div id="chat-overlay"></div>
        <i class="material-icons" id="open-chat-btn">speaker_phone</i>
      </div>
      <div class="chat-box">
        <div class="chat-box-header">
          Chat Box
          <span class="chat-box-toggle"><i class="material-icons">close</i></span>
        </div>
        <div class="chat-box-body">
          <div class="chat-box-overlay"></div>
          <div class="chat-logs"></div>
        </div>
        <div class="chat-input">
          <form>
            <input type="text" id="chat-input" placeholder="Send a message..." autocomplete="off" />
            <button type="submit" class="chat-submit" id="chat-submit">
              <i class="material-icons">send</i>
            </button>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>

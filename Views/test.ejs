          <span class="nav-logo">ROOMS</span>
          <i class="material-icons mic noselect" id="mic_off"> mic_off </i>
          <i class="material-icons cam noselect" id="videocam_off"> videocam_off </i>
        </div>
        <i class="material-icons exit noselect" id="exit_to_app"> exit_to_app </i>
      </div>
    </div>
    <!--Absolute pop-up-->
    <div class="popup">
      <div class="popup-nav">
        <span class="decorate-text-1">Enter ROOM</span>
      </div>
      <div class="popup-content">
        <table>
          <tr>
